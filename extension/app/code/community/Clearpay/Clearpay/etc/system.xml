<?xml version="1.0"?>
<config>
    <sections>
        <payment>
            <groups>
                <clearpay translate="label" module="clearpay">
                    <label>Clearpay</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <expanded>1</expanded>
                    <frontend_model>clearpay/adminhtml_LogoField</frontend_model>
                    <fields>
                        <active translate="label">
                            <label>Module Enabled</label>
                            <frontend_type>radios</frontend_type>
                            <source_model>clearpay/YesNo</source_model>
                            <sort_order>01</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </active>
                        <clearpay_api_region translate="label">
                            <label>API Region</label>
                            <frontend_type>radios</frontend_type>
                            <source_model>clearpay/ApiRegion</source_model>
                            <sort_order>02</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </clearpay_api_region>
                        <clearpay_merchant_id translate="label">
                            <label>Merchant Id</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>03</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </clearpay_merchant_id>
                        <clearpay_secret_key translate="label">
                            <label>Private API Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>04</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </clearpay_secret_key>
                        <clearpay_environment translate="label">
                            <label>Environment</label>
                            <frontend_type>radios</frontend_type>
                            <source_model>clearpay/Environment</source_model>
                            <sort_order>05</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </clearpay_environment>
                        <clearpay_min_amount translate="label">
                            <label>Min Payment Limit</label>
                            <frontend_model>clearpay/adminhtml_FieldDisabled</frontend_model>
                            <frontend_type>text</frontend_type>
                            <disabled>1</disabled>
                            <sort_order>06</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </clearpay_min_amount>
                        <clearpay_max_amount translate="label">
                            <label>Max Payment Limit</label>
                            <frontend_model>clearpay/adminhtml_FieldDisabled</frontend_model>
                            <frontend_type>text</frontend_type>
                            <disabled>1</disabled>
                            <sort_order>07</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </clearpay_max_amount>
                        <clearpay_exclude_category translate="label">
                            <label>Exclude Category</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>clearpay/Categories</source_model>
                            <sort_order>08</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </clearpay_exclude_category>
                    </fields>
                </clearpay>
            </groups>
        </payment>
    </sections>
</config>
